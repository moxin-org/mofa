    // ËØ≠Ë®ÄÊï∞ÊçÆÂíåÂàáÊç¢ÈÄªËæë
    const languages = {
      en: {
        flag: 'üá∫üá∏',
        name: 'EN',
        title: 'MoFA - Make Ordinary Developers Full-stack AI Engineers'
      },
      zh: {
